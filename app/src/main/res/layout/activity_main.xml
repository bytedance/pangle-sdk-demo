<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@color/title"
        android:gravity="center"
        android:text="Pangle Demo"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="1dp"
                android:background="#E3E2E2"/>

            <Button
                android:id="@+id/btn_main_feed_lv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="left|center_vertical"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/demo_native"
                android:drawableRight="@drawable/draw_forward"
                android:stateListAnimator="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#fff"
                android:textAllCaps="false"
                android:text="Native Ads(ListView)"
                android:textColor="#000"
                android:textSize="14sp"
                android:theme="@style/PrimaryButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#E3E2E2"/>

            <Button
                android:id="@+id/btn_main_feed_rv"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="left|center_vertical"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/demo_native"
                android:drawableRight="@drawable/draw_forward"
                android:stateListAnimator="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#fff"
                android:textAllCaps="false"
                android:text="Native Ads(RecyclerView)"
                android:textColor="#000"
                android:textSize="14sp"
                android:theme="@style/PrimaryButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#E3E2E2"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:background="#E3E2E2"/>
            <Button
                android:id="@+id/btn_banner_ad"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="left|center_vertical"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/demo_native"
                android:drawableRight="@drawable/draw_forward"
                android:stateListAnimator="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#fff"
                android:textAllCaps="false"
                android:text="Banner Ad"
                android:textColor="#000"
                android:textSize="14sp"
                android:theme="@style/PrimaryButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#E3E2E2"/>

            <Button
                android:id="@+id/btn_mian_reward"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="left|center_vertical"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/demo_native"
                android:drawableRight="@drawable/draw_forward"
                android:stateListAnimator="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#fff"
                android:textAllCaps="false"
                android:text="Reward Video"
                android:textColor="#000"
                android:textSize="14sp"
                android:theme="@style/PrimaryButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#E3E2E2"/>

            <Button
                android:id="@+id/btn_main_full"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="left|center_vertical"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/demo_native"
                android:drawableRight="@drawable/draw_forward"
                android:stateListAnimator="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#fff"
                android:textAllCaps="false"
                android:text="Interstitial"
                android:textColor="#000"
                android:textSize="14sp"
                android:theme="@style/PrimaryButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="#E3E2E2"/>

            <Button
                android:id="@+id/btn_main_app_open_ad"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="left|center_vertical"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/demo_native"
                android:drawableRight="@drawable/draw_forward"
                android:stateListAnimator="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="#fff"
                android:textAllCaps="false"
                android:text="App Open Ad"
                android:textColor="#000"
                android:textSize="14sp"
                android:theme="@style/PrimaryButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E2E2"/>


            <Button
                android:id="@+id/btn_main_draw_native"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:textColor="#3399cc"
                android:text="DRAW NATIVE VIDEO"
                android:theme="@style/PrimaryButton"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#E3E2E2"/>

        <Button
            android:id="@+id/btn_api_example"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/demo_video"
            android:drawableRight="@drawable/draw_forward"
            android:stateListAnimator="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#fff"
            android:textAllCaps="false"
            android:text="API Example"
            android:textColor="#000"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E2E2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#E3E2E2"/>

        <Button
            android:id="@+id/btn_all_test_tool"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/demo_tools"
            android:drawableRight="@drawable/draw_forward"
            android:stateListAnimator="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#fff"
            android:textAllCaps="false"
            android:text="Tools"
            android:textColor="#000"
            android:textSize="14sp"
            android:theme="@style/PrimaryButton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E2E2"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            tools:ignore="TextViewEdits" />

    </LinearLayout>

</ScrollView>
</LinearLayout>