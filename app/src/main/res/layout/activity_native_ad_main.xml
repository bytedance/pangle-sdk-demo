<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_adapter_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title"
            android:text="Pangle Demo"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:drawablePadding="2dp"
            android:paddingLeft="13dp"
            android:drawableLeft="@drawable/arror_foreground"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"
            android:background="#E3E2E2"/>

        <Button
            android:id="@+id/btn_main_feed_lv"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/demo_native"
            android:drawableRight="@drawable/draw_forward"
            android:stateListAnimator="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#fff"
            android:textAllCaps="false"
            android:text="Feed Ad Demo(ListView)"
            android:textColor="#000"
            android:textSize="14sp"
            android:theme="@style/PrimaryButton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#E3E2E2"/>

        <Button
            android:id="@+id/btn_main_feed_rv"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/demo_native"
            android:drawableRight="@drawable/draw_forward"
            android:stateListAnimator="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#fff"
            android:textAllCaps="false"
            android:text="Feed Ad Demo(RecyclerView)"
            android:textColor="#000"
            android:textSize="14sp"
            android:theme="@style/PrimaryButton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#E3E2E2"/>

        <Button
            android:id="@+id/btn_mian_reward"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/demo_native"
            android:drawableRight="@drawable/draw_forward"
            android:stateListAnimator="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#fff"
            android:textAllCaps="false"
            android:text="Reward Video"
            android:textColor="#000"
            android:textSize="14sp"
            android:theme="@style/PrimaryButton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#E3E2E2"/>

        <Button
            android:id="@+id/btn_main_full"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/demo_native"
            android:drawableRight="@drawable/draw_forward"
            android:stateListAnimator="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#fff"
            android:textAllCaps="false"
            android:text="Full Screen Video"
            android:textColor="#000"
            android:textSize="14sp"
            android:theme="@style/PrimaryButton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#E3E2E2"/>

        <Button
            android:id="@+id/btn_main_app_open_ad"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/demo_native"
            android:drawableRight="@drawable/draw_forward"
            android:stateListAnimator="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#fff"
            android:textAllCaps="false"
            android:text="App Open Ad"
            android:textColor="#000"
            android:textSize="14sp"
            android:theme="@style/PrimaryButton" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E2E2"/>

        <Button
            android:id="@+id/btn_main_banner"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="banner ad"
            android:textColor="#3399cc"
            android:theme="@style/PrimaryButton"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_main_draw_native"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textColor="#3399cc"
            android:text="DRAW NATIVE VIDEO"
            android:theme="@style/PrimaryButton"
            android:textSize="14sp" />


    </LinearLayout>

</ScrollView>

